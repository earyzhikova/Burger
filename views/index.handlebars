
<div class = "container">
<div class = "row">
  <div class="center col-sm-12">
    <img src="http://pluspng.com/burger-png-1031.html" alt="burger">
<h1>Eat-Da-Burger!!!</h1>
</div>
</div>

<div class="row">
	    <div class="col-sm-6">

			<br>
			<h2>Burgers Available To Eat!</h2>

			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			        <form action="/{{this.id}}?_method=PUT" method="POST">
			          <input type="hidden" name="devoured" value="true">
			          <button class="btn-primary" type="submit">Devour It!</button>
			        </form>

			      </li>
			    {{/unless}}
			  {{/each}}
			</ul>

	    </div>

	    <div class="col-sm-6">

			<h2>Burgers That Have Been Eaten!</h2>
			
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			      </li>
			    {{/if}}
			  {{/each}}
			
	    </div>

  	</div>
	

	<div class="row">
	    <div class="center col-sm-12">

			<h2>Add A Burger!</h2>

<form id="form-add">
  <div class="form-group">
    <label for="burger" class="h3">
      Add a burger you'd like to eat
    </label>
    <input id="addBurger" type="text" class="form-control" data = ""
    placeholder="ex. Cheeseburger">
    <button id="newBurgerButton" type="submit" class="btn">Submit</button>
  </div>
</form>
</div>
</div>