
<div class = "container">
<div class = "row">
  <div class="center col-sm-6">
    <img src="./assets/css/img/burger-image.png" alt="burger">
<h1>Eat-Da-Burger!!!</h1>
</div>
</div>

<div class="row">
	    <div class="col-sm-6">

			<br>
			<h2>Burgers Available To Eat!</h2>

			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			        <form method="PUT">
			          <input type="hidden" name="devoured" class='burger_id' value={{this.id}}>
			          <button class="btn-primary newBurgerDevoured" type="submit">Devour It!</button>
			        </form>

			      </li>
			    {{/unless}}
			  {{/each}}
			</ul>

	    </div>

	    <div class="col-sm-6">

			<h2>Burgers That Have Been Eaten!</h2>
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
              <input type="text" class="form-control" placeholder="{{this.id}}.{{this.burger_name}}" readonly>

			      </li>
			    {{/if}}
			  {{/each}}
			
	    </div>

  	</div>
	

	<div class="row">
	    <div class="center col-sm-12">

			<h2>Add A Burger!</h2>

<form id="form-add">
  <div class="form-group">  
      <input id="addBurger" type="text" class="form-control" data = ""
    placeholder="ex. Cheeseburger">
    <button id="newBurgerButton" type="submit" class="btn">Submit</button>
  </div>
</form>
</div>
</div>